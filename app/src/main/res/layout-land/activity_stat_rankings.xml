<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="8dp"
    android:textAlignment="center"
    android:weightSum="1"
    tools:context=".StatRankingsActivity">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/ftc_rank_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingRight="10dp">

        <TextView
            android:id="@+id/head_number"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:singleLine="true"
            android:text="Team"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            android:clickable="true"
            android:onClick="onClickNumberTextView"/>
        
        <TextView
            android:id="@+id/head_rank"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:gravity="right"
            android:text="FTC"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            android:clickable="true"
            android:onClick="onClickFtcRankTextView"/>

        <TextView
            android:id="@+id/head_winPercent"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:gravity="right"
            android:text="Win%"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            android:clickable="true"
            android:onClick="onClickWinPercentTextView"/>



        <TextView
            android:id="@+id/head_opr"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:gravity="right"
            android:text="Off"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            android:clickable="true"
            android:onClick="onClickOprTextView"/>

        <TextView
            android:id="@+id/head_dpr"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:gravity="right"
            android:text="Def"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            android:clickable="true"
            android:onClick="onClickDprTextView"/>

        <TextView
            android:id="@+id/head_ccwm"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:gravity="right"
            android:text="Cmb"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            android:clickable="true"
            android:onClick="onClickCcwmTextView"/>



<!--
        <TextView
            android:id="@+id/head_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="Name"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />  -->


    </LinearLayout>


    <ListView
        android:id="@+id/stat_rankings_list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></ListView>

</LinearLayout>